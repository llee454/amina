(executable
 (name main)
 (public_name amina)
 (libraries
   core
   lwt
   lwt.unix
   amina
   getopt
   angstrom
   amina_guile
 )
  (preprocessor_deps (file help.md))
  (preprocess (pps
    ppx_jane
    lwt_ppx
    ppx_deriving_yojson
    ppx_expect
    ppx_blob
  ))
  (modes exe)
  (link_flags
   ; enable the following lines to test for pointer usage
   (-cclib -g -cclib -fsanitize=address)
   (-cclib -g -cclib -fsanitize=undefined)
  )
)